@model IEnumerable<DentalClinic.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center;">Admin Informations</h1>

<form method="get" asp-action="Index">
    <table>
        <thead>

        <th style="margin:12px">  <input type="text" name="serachQuery" class="form-control me-sm-2" style="max-width:220px" placeholder="Search Patients" /></th>
        <th><input type="submit" value="Search" class="btn btn-outline-dark"></th>

        </thead>
    </table>
  
    
</form>
<p>
    <a asp-action="Create" class="btn btn-outline-dark">Create New</a>
</p>

<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <th>
                @{ string orderBy = (string)ViewData["o"]; }

                @if (orderBy == "tddesc")
                {
                    <a asp-action="Index" asp-route-sortBy="tdasc">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-sort-down" viewBox="0 0 16 16">
                            <path d="M3.5 2.5a.5.5 0 0 0-1 0v8.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L3.5 11.293zm3.5 1a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5M7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1z" />
                        </svg>
                    </a>
                }
                else
                {
                    <a asp-action="Index" asp-route-sortBy="tddesc">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-sort-up" viewBox="0 0 16 16">
                            <path d="M3.5 12.5a.5.5 0 0 1-1 0V3.707L1.354 4.854a.5.5 0 1 1-.708-.708l2-1.999.007-.007a.5.5 0 0 1 .7.006l2 2a.5.5 0 1 1-.707.708L3.5 3.707zm3.5-9a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5M7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1z" />
                        </svg>
                    </a>
                } 
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treatment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreatmentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Treatment.TretmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.PatientName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.AdminId" style="color: gray;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AdminId" style="color: gray;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AdminId" style="color: gray;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
